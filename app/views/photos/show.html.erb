<%- model_class = Photo -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @photo.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tag) %>:</strong></dt>
  <dd><%= @photo.tag %></dd>
  <dt><strong><%= model_class.human_attribute_name(:album) %>:</strong></dt>
  <dd><%= @photo.album %></dd>
  <dt><strong><%= model_class.human_attribute_name(:doc_file_name) %>:</strong></dt>
  <dd><%= @photo.doc_file_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:doc_content_type) %>:</strong></dt>
  <dd><%= @photo.doc_content_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:doc_file_size) %>:</strong></dt>
  <dd><%= @photo.doc_file_size %></dd>
  <dt><strong><%= model_class.human_attribute_name(:doc_updated_at) %>:</strong></dt>
  <dd><%= @photo.doc_updated_at %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              photos_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_photo_path(@photo), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              photo_path(@photo),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
